<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Edit an Owl</title>
        <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
        <style media="screen">
            *{
                margin: 0px auto;
                padding: 0px auto;
            }
            body{
                width: 970px;
                margin: 0px auto;
                background-color: gray;
            }
        </style>
    </head>
    <body>
        <% if(typeof(errors) != 'undefined' ) { %>
            <% for (var i in errors) { %>
                <h3><%= errors[i].message %></h3>
            <% } %>
        <% } %>
        <h1>This is an Edit page</h1>
        <table>
            <form action="/owls/<%= owl._id %>" method="post">
                <tbody>
                    <tr>
                        <td>Name: <input type="text" name="name"></td>
                    </tr>
                    <tr>
                        <td>Age: <input type="text" name="age"></td>
                    </tr>
                    <tr>
                        <td><input type="submit" value="Hoo Hoo"></td>
                    </tr>
                </tbody>
            </form>
        </table>
    </body>
</html>
